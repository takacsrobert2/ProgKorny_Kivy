<CreateAccountWindow>:
    name: "create"


    username: username
    email: email
    password: password


    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "Regisztráció"
                color: 1,10,220,1 # <-----------
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width**2 + root.height**2) / 14**4


            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8}
                text: "Név: "
                color: 1,10,220,1 # <-----------
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.45, 0.12
                id: username
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13}
                text: "E-mail: "
                color: 1,10,220,1 # <-----------
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13}
                size_hint: 0.45, 0.12
                id: email
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13*2}
                text: "Jelszó: "
                color: 1,10,220,1 # <-----------
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13*2}
                size_hint: 0.45, 0.12
                id: password
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 14**4

        Button:
            background_normal: ''
            background_color: 1, .6, .2, .85
            pos_hint:{"x":0.3,"y":0.25}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Már van fiókod? Jelentkezz be"
            on_release:
                root.manager.transition.direction = "left"
                root.login()

        Button:
            background_normal: ''
            background_color: 1, .2, .1, .85
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.15
            text: "Regisztráció"
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release:
                root.manager.transition.direction = "left"
                root.submit()


<LoginWindow>:
    name: "login"

    email: email
    password: password

    FloatLayout:

        Label:
            text: "Bejelentkezés"
            color: 1,10,220,1 # <-----------
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.1, "top":1.05}
            font_size: (root.width**2 + root.height**2) / 14**4

        Label:
            text:"E-mail: "
            color: 1,10,220,1 # <-----------
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.85}
            size_hint: 0.35, 0.15

        TextInput:
            id: email
            font_size: (root.width**2 + root.height**2) / 14**4
            multiline: False
            pos_hint: {"x": 0.45 , "top":0.85}
            size_hint: 0.5, 0.15

        Label:
            text:"Jelszó: "
            color: 1,10,220,1 # <-----------
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.65}
            size_hint: 0.35, 0.15

        TextInput:
            id: password
            font_size: (root.width**2 + root.height**2) / 14**4
            multiline: False
            password: True
            pos_hint: {"x": 0.45, "top":0.65}
            size_hint: 0.5, 0.15

        Button:
            background_normal: ''
            background_color: 1, .2, .1, .85
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.2
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Bejelentkezés"
            on_release:
                root.manager.transition.direction = "up"
                root.login_button()

        Button:
            background_normal: ''
            background_color: 1, .6, .3, .85
            pos_hint:{"x":0.3,"y":0.3}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Még nincs fiókod? Regisztrálj itt!"
            on_release:
                root.manager.transition.direction = "right"
                root.create_button()


<AccountWindow>:
    name: "account"

    username: username
    email: email
    created:created

    FloatLayout:

        Label:
            text: "Fiók adatok"
            color: 1,10,220,1 # <-----------
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.1, "top":1.05}
            font_size: (root.width**2 + root.height**2) / 14**4
        Label:
            id: username
            pos_hint:{"x": 0.1, "top":0.9}
            size_hint:0.8, 0.2

            background_color: (182/255, 66/255, 245/255, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            color: 1,10,220,1 # <-----------
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

        Label:
            id: email
            pos_hint:{"x": 0.1, "top":0.7}
            size_hint:0.8, 0.2

            color: 1,10,220,1 # <-----------
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

        Label:
            id: created
            pos_hint:{"x": 0.1, "top":0.5}
            size_hint:0.8, 0.2

            color: 1,10,220,1 # <-----------
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

        Button:
            background_normal: ''
            background_color: 1, .2, .1, .85
            pos_hint:{"x":0.2, "y": 0.1}
            size_hint:0.6,0.1
            text: "Kijelentkezés"
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "down"

        Button:
            background_normal: ''
            background_color: 1, .6, .2, .85
            pos_hint:{"x":0.5, "y": 0.2}
            size_hint:0.3,0.1
            text: "Fiók törlése"
            on_release:
                root.delete_account()
                app.root.current = "login"
                root.manager.transition.direction = "down"

        Button:
            background_normal: ''
            background_color: 1, .6, .3, .85
            pos_hint:{"x":0.2, "y": 0.2}
            size_hint:0.3,0.1
            text: "Fiók módosítása"
            on_release:
                app.root.current = "modify"
                root.manager.transition.direction = "down"

